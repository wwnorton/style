{
  "workspaces": [
    "packages/*",
    "guides-website"
  ],
  "scripts": {
    "build": "npm run build --workspace guides-website",
    "eslint": "eslint . --ignore-path .gitignore --ignore-pattern invalid-*",
    "serve": "npm run serve --workspace guides-website",
    "start": "npm run start --workspace guides-website",
    "test": "ava"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "ava": {
    "files": [
      "**/test/*.js",
      "!**/helpers*"
    ]
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "eslint": "^8.11.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "typescript": "^4.6.3"
  }
}
