{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "guides-website"
  ],
  "scripts": {
    "eslint": "eslint . --ignore-path .gitignore --ignore-pattern invalid-*",
    "test": "ava",
    "dev:docs": "npm run start --workspace guides-website",
