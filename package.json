{
  "workspaces": [
    "packages/*",
    "!packages/commitlint-config-norton",
    "!packages/prettier-config-norton"
  ],
  "scripts": {
    "eslint": "eslint . --ignore-path .gitignore",
    "test": "ava"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "ava": {
    "files": [
      "**/test/*.js",
      "!**/helpers*"
    ]
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^8.43.0",
    "husky": "^7.0.4",
    "lerna": "^5.6.2",
    "lint-staged": "^12.5.0",
    "typescript": "^4.9.5"
  }
}
