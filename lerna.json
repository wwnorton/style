{
  "version": "independent",
  "command": {
    "publish": {
      "access": "public"
    },
    "version": {
      "allowBranch": ["main", "release/*"],
      "message": "chore(release): publish %s",
      "conventionalCommits": true,
      "createRelease": "github",
      "changelogPreset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "✨ Features"
          },
          {
            "type": "fix",
            "section": "🐛 Bug Fixes"
          },
          {
            "type": "docs",
            "hidden": false,
            "section": "📝 Documentation"
          },
          {
            "type": "chore",
            "hidden": false,
            "section": "🛠 Maintenance"
          },
          {
            "type": "style",
            "hidden": true
          },
          {
            "type": "refactor",
            "hidden": false,
            "section": "♻️ Refactor"
          },
          {
            "type": "test",
            "hidden": true
          }
        ]
      }
    }
  }
}
